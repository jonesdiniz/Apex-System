# APEX System - Environment Variables Example
# Copy this file to .env and update values

# =============================================================================
# APPLICATION
# =============================================================================
APEX_ENVIRONMENT=development
APEX_DEBUG=true
APEX_LOG_LEVEL=INFO
APEX_JSON_LOGS=true

# =============================================================================
# MONGODB
# =============================================================================
APEX_MONGODB_URL=mongodb://apex_admin:apex_password_change_in_production@mongodb:27017/apex_system?authSource=admin
APEX_MONGODB_DATABASE=apex_system
APEX_MONGODB_MIN_POOL_SIZE=10
APEX_MONGODB_MAX_POOL_SIZE=100

# =============================================================================
# REDIS
# =============================================================================
APEX_REDIS_URL=redis://redis:6379
APEX_REDIS_DB=0
APEX_REDIS_PASSWORD=
APEX_REDIS_MAX_CONNECTIONS=50

# =============================================================================
# SECURITY
# =============================================================================
APEX_SECRET_KEY=change-this-to-a-very-secure-random-key-in-production
APEX_ALGORITHM=HS256
APEX_ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
APEX_ECOSYSTEM_PLATFORM_URL=http://ecosystem-platform:8002

# =============================================================================
# FEATURE FLAGS
# =============================================================================
APEX_ENABLE_METRICS=true
APEX_ENABLE_TRACING=false
APEX_ENABLE_CACHING=true

# =============================================================================
# TIMEOUTS (seconds)
# =============================================================================
APEX_HTTP_TIMEOUT=30
APEX_HEALTH_CHECK_TIMEOUT=5
APEX_DATABASE_TIMEOUT=10

# =============================================================================
# CIRCUIT BREAKER
# =============================================================================
APEX_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
APEX_CIRCUIT_BREAKER_TIMEOUT=60

# =============================================================================
# RATE LIMITING
# =============================================================================
APEX_RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# SERVICE-SPECIFIC PORTS
# =============================================================================
# These are set in docker-compose, but can be overridden for local dev
# APEX_SERVICE_PORT=8000
